    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_mnstry_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="إسم البلدية" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_mnstry_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="رقم البلدية" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_education_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="مراقبة التعليم" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_school_current_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="الإسم الحالي للمدرسة" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_school_old_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="الإسم القديم للمدرسة" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_school_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="رقم المدرسة" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_school_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="رقم هاتف المدرسة"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_service_office"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="مكتب خدمات" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_school_student_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="المرحلة التعليمية" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/swh_school_highschool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ثانوي" />

                        <Switch
                            android:id="@+id/swh_school_elementary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="أساسي" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/swh_school_highschool_literal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="أدبي" />

                        <Switch
                            android:id="@+id/swh_school_highschool_scientific"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="علمي" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/swh_school_preschool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="رياض أطفال" />
                    </LinearLayout>

                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_school_class_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="عدد الفصول"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_school_education_section2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="عدد الطلبة" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txt_school_student_female_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="إناث"
                            android:inputType="number" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txt_school_student_male_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="ذكور"
                            android:inputType="number" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_school_student_count2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الفترة" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/swh_school_period_morning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="صباحية" />

                        <Switch
                            android:id="@+id/swh_school_period_afternoon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="مسائية" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/darker_gray"
                        android:fontFamily="sans-serif-smallcaps"
                        android:lineSpacingExtra="10sp"
                        android:text="إضغط هنا للحصول على الإحداثيات"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:typeface="normal" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--<Button-->
                    <!--android:id="@+id/btn_submit2"-->
                    <!--style="@android:style/Widget.Material.Button.Colored"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@drawable/ic_launcher_background"-->
                    <!--android:enabled="false"-->
                    <!--android:fontFamily="casual"-->
                    <!--android:lineSpacingExtra="12sp"-->
                    <!--android:text="إضافة المدرسة"-->
                    <!--android:textAppearance="@style/TextAppearance.AppCompat.Display1"-->
                    <!--android:textColor="@color/colorPrimary"-->
                    <!--android:textSize="44sp"-->
                    <!--android:textStyle="bold" />-->

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:enabled="true"
                        android:text="إضافة المدرسة"
                        android:textSize="44sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_666"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="©2019 ALDALEEL ALRAQAME / Sofian Benissa"
                        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

                </LinearLayout>


            </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
        <!--</ScrollView>-->

    <!--</LinearLayout>-->


